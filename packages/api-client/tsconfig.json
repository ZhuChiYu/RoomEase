{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@roomease/shared": ["../shared/src"]
    }
  },
  "include": [
    "src/**/*", 
    "../shared/src/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist",
    "src/hooks/**/*",
    "src/query-client.ts"
  ]
}

